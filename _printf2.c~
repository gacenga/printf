
int print_number(int n)
{
if (n == 0)
{
return (0);
}
else
{
return (print_number(n / 10) + _putchar('0' + n % 10));
}
}

if(*format == 'd' || *format == 'i')
{
int num = va_arg(args, int);
if (num < 0)
{
_putchar('-');
j++;
num = -num;
}
j += print_number(num);
}
}
format++;
}
va_end(args);
return (j);
}
